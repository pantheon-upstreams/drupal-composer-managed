{#
/**
 * @file
 * Default template for a menu block.
 */
#}
{%
set classes = [
'block',
'block--menu',
bundle ? 'block--' ~ bundle|clean_class,
id ? 'block--' ~ id|clean_class,
]
%}
{% set heading_id = attributes.id ~ '-menu'|clean_id %}
<nav{{ attributes.addClass(classes)|without('id') }}>

  {{ title_prefix }}
  {% if label %}
    <h4{{ title_attributes.addClass('block__title') }}>{{ label }}</h4>
  {% endif %}
  {{ title_suffix }}
  
  {% block content %}
    {{ content }}
  {% endblock %}
</nav>
