{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - media: The media item, with limited access to object properties and
 *   methods.
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}

{% set classes = [
    'media',
    'media--' ~ media.bundle()|clean_class,
    not media.isPublished() ? 'media--unpublished',
    view_mode ? 'media--' ~ view_mode|clean_class,
] %}

{% set rendered_content = content|without(
    'field_image_caption',
    'field_image_credit',
)%}

{% if content.field_image_caption|render or content.field_image_credit|render %}
    {% set media_caption %}
        {{ content.field_image_caption|field_value }}
        {{ content.field_image_credit|field_value }}
    {% endset %}
{% endif %}

{% embed 'surf_main:media' with {
    media_attributes: create_attribute({'class': classes}).merge(attributes),
    media_caption: media_caption is not empty ? media_caption,
    media_content: rendered_content,
} only %}
    {% block media_content %}
        {{ media_content }}
    {% endblock %}
{% endembed %}
