/**
 * @file
 * Theme override to display a Research Area Taxonomy Term with Full view mode.
 *
 * Available variables:
 * - No additional variables are available for this Taxonomy type.
 *
 * @see templates/taxonomy/taxonomy-term.html.twig
 * @see components/05-pages/research-area/research-area.twig
 */
#}

{% set classes = [
    content.field_ref_media_primary|render ? 'p-research-area--with-img',
] %}

{% set rendered_content = content|without(
    'field_ref_experiments',
    'field_ref_media_primary',
    'field_p_content',
    'field_overview'
) %}

{% include 'surf_main:research-area' with {
    attributes,
    rendered_content,
    research_area_attributes: create_attribute({'class': classes}),
    research_area_content: content.field_p_content,
    research_area_heading: name|field_value,
    research_area_heading_summary: content.field_overview|field_value|default({}),
    research_area_media: content.field_ref_media_primary|field_value|default([]),
    research_area_related_experiments: content.field_ref_experiments,
} only %}
