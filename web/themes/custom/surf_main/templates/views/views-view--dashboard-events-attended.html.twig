{#
/**
 * @file
 * Theme override for a main view template.
 *
 * Available variables:
 * - No additional variables are available for this View.
 *
 * @see surf_main/templates/views/views-view.html.twig
 */
#}

{% set classes = [
    'view--' ~ id|clean_class,
    'view--' ~ display_id|clean_class,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
] %}

{% embed 'surf_main:view-list' with {
    view_attributes: attributes.addClass(classes),
} %}
    {% block view_title %}
        {{ title_prefix }}
        {% if title %}
            {{ title }}
        {% endif %}
        {{ title_suffix }}
    {% endblock %}

    {% block view_header %}
        {% if header %}
            <div class="view__header">
                {{ header }}
            </div>
        {% endif %}
    {% endblock %}

    {% block view_filters %}
        {% if exposed %}
            <div class="view__filters">
                {{ exposed }}
            </div>
        {% endif %}
    {% endblock %}

    {% block view_attach_before %}
        {% if attachment_before %}
            <div class="view__attachment view__attachment--before">
                {{ attachment_before }}
            </div>
        {% endif %}
    {% endblock %}

    {% block view_rows %}
        {% if rows %}
            <div class="view__content">
                {{ rows }}
            </div>
        {% elseif empty %}
            <div class="view__empty">
                {{ empty }}
            </div>
        {% endif %}
    {% endblock %}

    {% block view_pager %}
        {% if pager %}
            {{ pager }}
        {% endif %}
    {% endblock %}

    {% block view_attach_after %}
        {% if attachment_after %}
            <div class="view__attachment view__attachment--after">
                {{ attachment_after }}
            </div>
        {% endif %}
    {% endblock %}

    {% block view_more %}
        {% if more %}
            {{ more }}
        {% endif %}
    {% endblock %}

    {% block view_footer %}
    {% endblock %}
{% endembed %}