{#
/**
 * @file
 * Default theme implementation to display a Hero Paragraph.
 *
 * Available variables:
 * - No additional variables are available for this Paragraph type.
 *
 * @see templates/paragraphs/paragraph.html.twig
 * @see components/02-molecules/hero/hero.twig
 */
#}

{% set classes = [
    'paragraph',
    'paragraph--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
] %}

{% set rendered_content = content|without(
    'field_ref_media_single',
    'field_text',
    'field_title'
) %}

{% include 'surf_main:hero' with {
    attributes,
    rendered_content,
    hero_attributes: create_attribute({'class': classes}),
    hero_media: content.field_ref_media_single|field_value,
    hero_text: content.field_text|field_value|default([]),
    hero_title: content.field_title|field_value,
    hero_type: style_options['hero_type'],
} only %}