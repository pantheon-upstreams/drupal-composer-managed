{#
/**
 * @file
 * Default theme implementation to display a Text Paragraph.
 *
 * Available variables:
 * - No additional variables are available for this Paragraph type.
 *
 * @see templates/paragraphs/paragraph.html.twig
 * @see components/01-atoms/editor/editor.twig
 */
#}

{% set classes = [
    'paragraph',
    'paragraph--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
] %}

{% set rendered_content = content|without(
    'field_text',
) %}

{% include 'surf_main:editor' with {
    attributes,
    rendered_content,
    editor_attributes: create_attribute({'class': classes}),
    editor_content: content.field_text|field_value|default([]),
} only %}
