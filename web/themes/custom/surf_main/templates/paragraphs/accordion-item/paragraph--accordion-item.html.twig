{#
/**
 * @file
 * Default theme implementation to display an Accordion Item Paragraph.
 *
 * Available variables:
 * - No additional variables are available for this Paragraph type.
 *
 * @see templates/paragraphs/paragraph.html.twig
 * @see components/02-molecules/accordion/accordion-item.twig
 *
 */
#}

{% set rendered_content = content|without(
    'field_title',
    'field_text'
) %}

{% embed 'surf_main:accordion-item' with {
    attributes,
    accordion_item_attributes: create_attribute(),
    accordion_item_id: paragraph.field_title.value|clean_class,
    accordion_item_title: content.field_title|field_value,
    accordion_item_content: content.field_text|field_value,
} only %}
    {% block accordion_item_content %}
        {{ accordion_item_content }}
    {% endblock %}
{% endembed %}

{{ rendered_content }}
