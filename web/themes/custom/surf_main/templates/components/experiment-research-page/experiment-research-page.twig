{% if image_url is empty %}
  {% set has_image = 'has-no-image' %}
{% else %}
  {% set has_image = 'has-image' %}
{% endif %}

<article {{ attributes.addClass(['c-experiment-research-page', has_image]).merge(clAttributes) }}>

  {# Image #}
  {% if image_url %}
  <div class="c-experiment-research-page__image-wrapper">
    <img src="{{ image_url }}" alt="{{image_alt}}">
  </div>
  {% endif %}

  <div class="c-experiment-research-page__header-wrapper l-constrained--xlarge">

    {# Breadcrumbs #}
    {% if breadcrumbs %}
    <div class="c-experiment-research-page__breadcrumbs-wrapper">
      {# Breadcumbs #}
        {% include "breadcrumbs" with {
          items: breadcrumbs
        } %}
    </div>
    {% endif %}

    {# Title #}
    {% if title %}
    <h1 class="c-experiment-research-page__title">
      {{ title }}
    </h1>
    {% endif %}

    {# intro #}
    {% if intro %}
    <p class="c-experiment-research-page__intro">
      {{ intro }}
    </p>
    {% endif %}

    {# Link #}
    {% if link_url %}
    <div class="c-experiment-research-page__link-wrapper">
      <a href="{{ link_url }}" class="forest-button">{{ link_text }}</a>
    </div>
    {% endif %}
  </div>



  {# Body #}
  {# {% if body %} #}
  <div class="c-experiment-research-page__body-wrapper">
    {{ body }}
  </div>
  {# {% endif %} #}

  {#
Key Facts:
content.field_key_facts

Media Gallery:
content.field_media_gallery

Key Experiments:
content.field_key_experiments
#}

  {# Key Facts #}
  {% if key_facts %}
  <div class="c-experiment-research-page__key-facts-wrapper l-constrained--xlarge">
    <h2 class="c-experiment-research-page__key-facts-title">Key Facts</h2>
    <div class="c-experiment-research-page__key-facts">
      {{ key_facts }}
    </div>
  </div>
  {% endif %}

  {# Media Gallery #}
  {% if media_gallery %}
  <div class="c-experiment-research-page__media-gallery-wrapper l-constrained--xlarge">
    <h2 class="c-experiment-research-page__media-gallery-title">Media Gallery</h2>
    <div class="c-experiment-research-page__media-gallery">
      {{ media_gallery }}
    </div>
  </div>
  {% endif %}

  {# Key Experiments #}
  {% if key_experiments %}
  <div class="c-experiment-research-page__key-experiments-wrapper l-constrained--xlarge">
    <h2 class="c-experiment-research-page__key-experiments-title">Key Experiments</h2>
    <div class="c-experiment-research-page__key-experiments">
      {{ key_experiments }}
    </div>
  </div>
  {% endif %}




  {# News #}
  {# <div class="c-experiment-research-page__view-wrapper">
    {{ drupal_view('news', 'news_feature_block') }}
  </div> #}


</article>