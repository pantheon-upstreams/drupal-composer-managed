{% if image_url is empty %}
  {% set has_image = 'has-no-image' %}
{% else %}
  {% set has_image = 'has-image' %}
{% endif %}

<article {{ attributes.addClass(['c-basic-page', has_image]).merge(clAttributes) }}>

  {# Image #}
  {% if image_url %}
  <div class="c-basic-page__image-wrapper">
    <img src="{{ image_url }}" alt="{{image_alt}}">
  </div>
  {% endif %}

  <div class="c-basic-page__header-wrapper l-constrained--xlarge">

    {# Breadcrumbs #}
    {% if breadcrumbs %}
    <div class="c-basic-page__breadcrumbs-wrapper">
      {# Breadcumbs #}
        {% include "breadcrumbs" with {
          items: breadcrumbs
        } %}
    </div>
    {% endif %}

    {# Title #}
    {% if title %}
    <h1 class="c-basic-page__title">
      {{ title }}
    </h1>
    {% endif %}

    {# intro #}
    {% if intro %}
    <p class="c-basic-page__intro">
      {{ intro }}
    </p>
    {% endif %}

    {# Link #}
    {% if link_url %}
    <div class="c-basic-page__link-wrapper">
      <a href="{{ link_url }}" class="forest-button">{{ link_text }}</a>
    </div>
    {% endif %}
  </div>



  {# Body #}
  {# {% if body %} #}
  <div class="c-basic-page__body-wrapper">
    {{ body }}
  </div>
  {# {% endif %} #}

  {# News #}
  {# <div class="c-basic-page__view-wrapper">
    {{ drupal_view('news', 'news_feature_block') }}
  </div> #}


</article>