{# Prepare presentational attributes #}
{% if uppercase is not empty %}
	{% set clAttributes = clAttributes.addClass('link-button--uppercase') %}
{% endif %}
{% if button_style is not empty %}
	{% set clAttributes = clAttributes.addClass('link-button--' ~ button_style) %}
{% endif %}
{% if color is not empty %}
	{% set clAttributes = clAttributes.addClass('t-' ~ color) %}
{% endif %}

<a {{ clAttributes.addClass('c-link-button'|addModifiers([layout, icon, button_type_size])).setAttribute('href', url) }}>
	{% if icon_type and icon_type != 'arrow' %}
		<span class="link-button__icon-left">
			{{ source(clMeta.path ~ '/img/' ~ icon_type ~ '.svg') }}
		</span>
	{% endif %}
	{{ text }}
	{% if icon_type == 'arrow' or arrow %}
		<span class="link-button__icon">
			{{ source(clMeta.path ~ '/img/arrow.svg') }}
		</span>
	{% endif %}
</a>
{# cl-component cl-component--link-button cl-component--atom cl-component--ready link-button--uppercase link-button--solid t-black c-link-button c-link-button-- #}