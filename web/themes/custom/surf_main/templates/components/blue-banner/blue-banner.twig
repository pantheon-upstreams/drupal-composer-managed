<section {{ clAttributes.addClass('c-blue-banner') }}>

  {% if heading %}
  {% block banner_heading_block %}
  <h2 class="c-blue-banner__title">{{heading}}</h2>
  {% endblock %}
  {% endif %}

  {% if body %}
  {% block banner_body_block %}
  <div class="c-blue-banner__body">
    {{ body|check_markup('plain') }}
  </div>
  {% endblock %}
  {% endif %}

  {% if link_text and link_url %}
  {% block callout__link %}
  <div class="c-blue-banner__link">
    {% include "link-button" with {
    text: link_text,
    url: link_url,
    color: 'white',
    uppercase: true,
    } %}
  </div>
  {% endblock %}
  {% endif %}

</section>

