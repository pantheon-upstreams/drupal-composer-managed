{# Markup for the component #}
<article {{ attributes.addClass(['c-resources-list', 'l-constrained--small', 'l--bottom-spacing']).merge(clAttributes) }}>

  {% if heading %}
    <h2 class="c-resources-list__heading">{{ heading }}</h2>
  {% endif %}

  {% if items %}
  {% block items_block %}

  <ul class="c-resources-list__items">
  {% for item in items %}
    <li class="c-resources-list__item">
     {{ drupal_entity('paragraph', item.id, 'default') }}
     </li>
   {% endfor %}

  </ul>
  {% endblock items_block %}
  {% endif %}

</article>
