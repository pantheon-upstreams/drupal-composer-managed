<header {{ attributes.addClass(['c-header', heading_style, heading_hr, 'l-constrained--xlarge', 'l--bottom-spacing']).merge(clAttributes) }}>

  {% if heading_hr == 'horizontal-rule' %}
    <hr class="left-hook-divider">
  {% endif %}

  {% if heading and type == 'h1' %}
    <h1>{{heading}}</h1>
  {% else %}
    <h2>{{heading}}</h2>
  {% endif %}

</header>
