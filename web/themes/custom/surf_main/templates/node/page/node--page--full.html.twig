{#
/**
 * @file
 * Theme implementation to display a node.
 *
 * Available variables:
 *  See embed below
 *
 * @see template_preprocess_node()
 */
#}

{% set classes = [
  content.field_media_primary.0 ? 'o-page--with-img',
] %}

{% embed 'surf_main:page' with {
  page_attributes: create_attribute({'class': classes}),
  page_heading: label|field_value,
  page_summary: content.field_overview.0 ? content.field_overview|field_value,
  page_cta_url: content.field_link.0 ? content.field_link.0['#url'],
  page_cta_text: content.field_link.0 ? content.field_link.0['#title'],
  page_cta_html_tag,
  page_cta_style,
  page_cta_size,
  page_cta_color,
  page_media: content.field_media_primary.0 ? content.field_media_primary|field_value,
  page_content: content.field_p_content,
  title_suffix: title_suffix,
  attributes,
} only %}
{% endembed %}

{{ content|without(
  'field_p_content',
  'field_overview',
  'field_media_primary',
  'field_link',
) }}
