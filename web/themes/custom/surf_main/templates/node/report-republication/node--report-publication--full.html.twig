{# set image and alt#}
 {% if content.field_media_primary.0 %}
	{% set image = content.field_media_primary.0["#media"].field_media_image.entity.uri.value|image_style('hero') %}
	{# set alt to use the image's alt text #}
	{% set alt = content.field_media_primary.0["#media"].thumbnail.alt %}
{% endif %}

{# Handle internal and external links/urls #}
{% if content.field_link.0 is empty %}
  {% set link_url = '' %}
{% elseif content.field_link.0["#url"].external %}
  {% set link_url = content.field_link.0["#url"].uri %}
{% else %}
  {% set link_url = path(content.field_link.0["#url"].routeName, content.field_link.0["#url"].routeParameters) %}
{% endif %}

{{ include('surf_main:basic-page', {
  breadcrumbs: breadcrumbs,
  title: label,
  image_url: image,
  image_alt: alt,
  intro: content.field_teaser_text|field_value,
  link_url: link_url,
  link_text: content.field_link.0["#title"],
  body: content.field_p_content,
}, with_context = false) }}

