{% set full_name = content.field_name.0["#markup"] %}
{% set name_array = full_name|split(' ') %}

{% if name_array|length == 3 %}
    {% set initials = name_array[0]|first ~ name_array[2]|first %}
{% else %}
    {% set initials = name_array|map(item => item|first)|join('') %}
{% endif %}

{% include "person" with {
  bio_url: url,
  full_name,
  initials: initials,
  title: content.field_job_title|field_value,
  image_url: file_url(content.field_media_primary['#items'].entity.field_media_image.entity.fileuri),
  image_alt: content.field_media_primary['#items'].entity.field_media_image.alt,
  phone: content.field_phone_office|field_value,
  contact_url: content.field_email|field_value,
  attributes
} %}

