{# News (search) Landing Page #}
<article{{attributes.addClass(['article'])}}>

	<div class="l--1-col l-constrained">
		<div class="l__primary">
			{% include "header" with {
					heading: 'NEWS',
					header_text_style: 'black-text',
					header_particle_style: 'green-particles',
			} %}
		{# Top Featured Post (1) #}
		{{ drupal_entity('block_content', 19) }}

		{# Featured News Posts (2-3) #}
		{{ drupal_entity('block_content', 20) }}


		{# All News Search #}
			<h2>ALL NEWS</h2>
			<hr class="left-hook-divider" />
			<div>
				{{ drupal_view('news_search', 'block_news_search') }}
			</div>

			{# Let's Dig Deeper (block) #}
			{{ drupal_entity('block_content', 21) }}

		</div>
	</div>
</article>
