{% embed 'surf_main:curriculum' with {
  attributes,
  curriculum_attributes: create_attribute({'class': ['p-curriculum--full-dashboard']}),
  curriculum_heading: label,
  curriculum_media: content.field_media|field_value|default([]),
  curriculum_summary: content.field_overview|field_value|default([]),
  curriculum_body: content.body|field_value|default([]),
  curriculum_grade_level: content.field_ref_grade_level|field_value|default([]),
  curriculum_content_area: content.field_content_area|field_value|default([]),
  curriculum_time_required: content.field_time_required|field_value|default([]),
  curriculum_standards: content.field_ref_standards|field_value|default([]),
  curriculum_resources: content.field_resource_list|field_value|default([]),
  curriculum_cta_url: content.field_link.0 ? content.field_link.0['#url'],
  curriculum_cta_text: content.field_link.0 ? content.field_link.0['#title'],
  curriculum_cta_html_tag,
  curriculum_cta_style,
  curriculum_cta_size,
  curriculum_cta_color,
  curriculum_dashboard: true,
} only %}
{% endembed %}

{{ content|without(
  'field_ref_audiences',
  'body',
  'field_link',
  'field_content_area',
  'field_ref_eo_opportunities',
  'field_ref_grade_level',
  'field_media',
  'field_ref_related_content',
  'field_ref_research_areas',
  'field_ref_standards',
  'field_overview',
  'field_time_required',
  'reservation_links',
  'field_resource_list',
) }}