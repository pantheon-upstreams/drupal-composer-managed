{#
/**
 * @file
 * Theme implementation to display a node.
 *
 * Available variables:
 *  See embed below
 *
 * @see template_preprocess_node()
 */
#}

{% embed 'surf_main:person-card' with {
  person_card_attributes: create_attribute(),
  person_card_name: content.field_name.0 ? content.field_name|field_value,
  person_card_role: content.field_job_title.0 ? content.field_job_title|field_value,
  person_card_office_phone: content.field_phone_office.0 ? content.field_phone_office|field_value,
  person_card_email: content.field_email.0 ? content.field_email|field_value,
  person_card_media: content.field_media_primary.0 ? content.field_media_primary|field_value,
  person_card_url: path('entity.node.canonical', {'node': node.id}),
  attributes,
} only %}
{% endembed %}

{{ content|without(
  'field_name',
  'field_job_title',
  'field_phone_office',
  'field_email',
  'field_media_primary',
  'links',
) }}

