{% set rendered_fields = [
    'field_name',
    'field_job_title',
    'body',
    'field_phone_office',
    'field_email',
    'field_media_primary',
] %}

{% embed 'surf_main:person' with {
  attributes,
  person_attributes: create_attribute(),
  person_heading: content.field_name|field_value,
  person_job_title: content.field_job_title|field_value,
  person_body: content.body|field_value,
  person_phone: content.field_phone_office|field_value,
  person_email: content.field_email|field_value,
  person_media: content.field_media_primary|field_value,
} only %}
{% endembed %}

{{ content|without(rendered_fields) }}
