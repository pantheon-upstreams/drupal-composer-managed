{#
/**
 * @file
 * Theme implementation to display a node.
 *
 * Available variables:
 *  See embed below
 *
 * @see template_preprocess_node()
 */
#}

{%
  set rendered_fields = [
  'body',
  'field_overview',
  'label',
  'field_dates',
  'field_media_primary',
  'field_link',
]
%}

{% embed 'surf_main:event' with {
  event_attributes: create_attribute({'class': ['o-event--full']}),
  event_heading: label,
  event_media: content.field_media_primary|field_value,
  event_overview: content.field_overview|field_value,
  event_body: content.body|field_value,
  event_dates: content.field_dates|field_value,
  event_link_text: content.field_link.0['#title'] ? content.field_link.0['#title'] : 'Visit Website',
  event_link_url: content.field_link.0['#url_title'],
  title_suffix: title_suffix,
  attributes,
} only %}
{% endembed %}

{{ content|without(rendered_fields) }}