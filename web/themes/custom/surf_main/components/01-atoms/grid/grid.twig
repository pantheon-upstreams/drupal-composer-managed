{#
/**
 * @file
 * Component for Grid
 *
 * Available props:
 * - attributes: [Drupal\Core\Template\Attribute] Space for Drupal attributes.
 * - grid_attributes: [mixed] Any custom attributes for the grid.
 * - grid_column_type: [string] Options include 'col-1', 'col-2', 'col-3' and 'col-4'.
 * - grid_items: [array] Rendered items that make up the grid.
 * - grid_html_type: [string] Options include 'ul', 'ol' and 'div'.
 *
 * Available slots:
 * - grid_items: [array] Rendered items that make up the grid.
 *
 */
#}

{% set classes = [
    'a-grid',
    'a-grid--' ~ grid_column_type,
] %}

<{{ grid_html_type }} {{ grid_attributes.addClass(classes).merge(attributes) }}>
    {% block grid_items %}{% endblock %}
</{{ grid_html_type }}>
