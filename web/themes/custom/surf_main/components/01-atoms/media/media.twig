{#
/**
 * @file
 * Component for a Icon
 *
 * Available props:
 * - media_attributes: [array] Any parent tag attributes.
 * - media: [array]
 * - media_caption: [string]
 *
 * Example usage:
{% embed 'surf_main:media' with {
  media_attributes: create_attribute(),
  media_caption: 'Photo caption.',
} only %}

  {% block media_block %}
    {{ media }}
  {% endblock %}

{% endembed %}
 */
#}


{%
  set classes = [
  'a-media',
]
%}

<figure {{ media_attributes.addClass(classes).merge(attributes) }}>

  {% block media_block %}
    {{ media }}
  {% endblock %}

  {% if media_caption %}
    <figcaption class="a-media__caption">
      {{ media_caption }}
    </figcaption>
  {% endif %}

</figure>