{#
/**
 * @file
 * Component for Media
 *
 * Available props:
 * - media_attributes: [array] Any custom attributes needed for this component.
 * - media_caption: [string] Related text attribution for the media.
 *
 * Available slots:
 * - media_caption
 * - media_content
 */
#}


{% set classes = [
    'a-media',
] %}

<figure {{ media_attributes.addClass(classes) }}>
    {% block media_content %}{% endblock %}

    {% block media_caption %}
        {% if media_caption %}
            <figcaption class="a-media__caption">
                {{ media_caption }}
            </figcaption>
        {% endif %}
    {% endblock %}
</figure>
