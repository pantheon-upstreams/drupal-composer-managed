{#
/**
 * @file
 * Layout component for Three Column layouts
 *
 * Available props:
 * - attributes: [Drupal\Core\Template\Attribute] Drupal reserved space for attributes.
 * - layout_attributes: [string] Any additional attributes needing to be specified.
 * - layout_column_widths: [string] Options include '33-34-33'.
 *
 * Available slots:
 * - layout_content
 *
 */
#}

{% set classes = [
    'l-threecol',
    'l-threecol--' ~ layout_column_widths,
] %}

<{{ layout_html_wrapper }} {{ layout_attributes.addClass(classes).merge(attributes) }}>
    {% block layout_content %}{% endblock %}
</{{ layout_html_wrapper }}>
