{%
  set classes = [
  'c-article',
  'l-constrained',
]
%}

<article {{ attributes.addClass(classes).merge(attributes) }}>
  <div class="c-article__inner-wrapper">

    {# Primary Media (image) #}
    {% if image_url %}
      <div class="c-article__image-wrapper">

        {{ include('surf_main:image', {
          image: image_url,
          alt: image_alt,
          credit: image_credit
        }, with_context = false) }}

      </div>
    {% endif %}

  {# Primary Media (video) #}
  {% if video_url %}
    <div class="c-article__video-wrapper">

      {{ include('surf_main:video', {
        title: video_title,
        video: "https://player.vimeo.com/video/" ~ video_url,
      }, with_context = false) }}

    </div>
  {% endif %}

  {# Content #}
  <div class="c-article__content-wrapper">

    <header class="c-article__header-wrapper">
      <div class="c-article__breadcrumbs-date-wrapper">
        {# Breadcrumbs #}
        <nav class="c-article__breadcrumb" aria-label="Breadcrumb">
          <ol class="c-article__breadcrumb-list">
            <li class="c-article__breadcrumb-item">
              <a href="/news" class="c-article__breadcrumb-link" aria-current="page">{{ 'News'|t }}</a>
            </li>
          </ol>
        </nav>
      </div>
      {# Title #}
      <h1 class="c-article__title">{{title}}</h1>
    </header>

    {# Overview #}
    {% if overview %}
      <div class="c-article__overview">
       <p>{{ overview }}</p>
      </div>
    {% endif %}

    {# Body #}
    {% if body %}
      <div class="c-article__body">
        {{ body }}
      </div>
    {% endif %}

    <hr class="left-hook-divider top" />
  </div>


  <div class="c-article__bottom-wrapper">

      {# Date #}
      {% if date %}
        <div class="c-article__date">
          {{date}}
        </div>
      {% endif %}

    {# Author #}
    {% if author %}
      <p class="c-article__author">
        by {{ author }}
      </p>
    {% endif %}

    {# Categories #}
    {% if categories['#items'] %}
      <ul class="c-article__categories">
        {% for item in categories['#items'] %}
          <li class="c-article__categories-item">
            <a
              href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': item.entity.tid.value}) }}">{{item.entity.name.value}}</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    {# Press contact(s) #}
    {% if contacts %}
      <h3 class="c-article__contacts-title">Press Contact</h3>
      <ul class="c-article__contacts">
        {% for item in contacts %}
          <li class="c-article__contacts-item">

            {{ include('surf_main:person', {
              image_url: item.image_url,
              image_alt: item.image_alt,
              full_name: item.name,
              initials: initials,
              title: item.title,
              phone: item.phone,
              contact_url: item.contact_url,
              bio_url: item.bio_url,
            }, with_context = false) }}

          </li>
        {% endfor %}
      </ul>
    {% endif %}

    {# Media Download(s) #}
    {% if downloads %}

      {{ include('surf_main:resources-list', {
        heading: 'Media Downloads',
        items: downloads,
      }, with_context = false) }}

    {% endif %}

    {# Callouts #}
    <div class="c-article__callout-wrapper">

      {{ include('surf_main:list', {
        style: 'default-column',
        items: callouts,
      }, with_context = false) }}

    </div>

  </div>

  {% if related %}
    <hr class="left-hook-divider bottom" />

    {# Press Resources #}
    <div class="c-article__press-resources-wrapper">
      <h2 class="c-article__press-resources-title">RELATED NEWS</h2>

      {{ include('surf_main:list', {
        style: 'default-column',
        items: related,
      }, with_context = false) }}

    </div>
  {% endif %}

  </div>
</article>