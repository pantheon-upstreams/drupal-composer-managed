{#
/**
 * @file
 * Component for Dashboard Menu
 *
 * Available props:
 * - attributes: [Drupal\Core\Template\Attribute] Drupal reserved space for attributes.
 * - menu_attributes: [string] Any additional attributes needing to be specified.
 * - menu_content: [array] Expecting the render array of objects that build out menu items.
 * - menu_label_display: [boolean] Whether or not to display the menu title.
 * - menu_title: [string] Expecting a value to represent this menu.
 *
 * Available slots:
 * - menu_prefix
 *
 */
#}

{% set classes = [
    'm-menu',
    'm-menu--dashboard-menu',
] %}

{% set title_classes = [
    'm-menu__title',
    not menu_label_display ? 'visually-hidden',
] %}

<nav {{ menu_attributes.addClass(classes).merge(attributes) }} aria-label="Dashboard Menu" role="navigation">
    {% block menu_prefix %}{% endblock %}
    {{ menu_content }}
</nav>
