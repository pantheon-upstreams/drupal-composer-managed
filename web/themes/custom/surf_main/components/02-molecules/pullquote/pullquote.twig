
{#
/**
 * @file
 * Component for Pullquote
 *
 * Available props:
 * - pullquote_attributes: [array] Any parent tag attributes.
 * - pullquote_quote: [string] required
 * - pullquote_credit: [string]
 * - pullquote_type: [string]
 *
 * Example usage:
{% embed 'surf_main:pullquote' with {
  pullquote_attributes: create_attribute(),
  pullquote_quote: 'Extremely large emphasized text example. Lorem ipsum dolor sit amet.',
  pullquote_credit: 'Optional second line for quote credit.',
  pullquote_type: 'large',
} only %}
{% endembed %}
 */
#}

{% set classes = [
  'm-pullquote',
  pullquote_type ? 'm-pullquote--' ~ pullquote_type,
] %}

<figure {{ pullquote_attributes.addClass(classes).merge(attributes) }}>
  <blockquote class="m-pullquote__quote">
    {{ pullquote_quote }}
  </blockquote>

  {% if pullquote_credit %}
    <figcaption class="m-pullquote__credit">&#8212;&nbsp;{{ pullquote_credit }}</figcaption>
  {% endif %}
</figure>
