{#
/**
 * @file
 * Component for Teaser
 *
 * Available props:
 * - attributes: [Drupal\Core\Template\Attribute] Space for Drupal attributes.
 * - teaser_attributes [mixed] Any custom attributes for the teaser.
 * - teaser_content: [string] Teaser text.
 * - teaser_media: [mixed] Representative media for the teaser.
 * - teaser_title: [string] Primary title for the teaser.
 * - teaser_title_tag: [string] 'h3' for example.
 * - teaser_type: [string] Available options include, 'list', 'super' and 'person'.
 * - teaser_url: [string] Path alias for linking teasers.
 *
 * Available slots:
 * - teaser_content_prefix
 * - teaser_content_suffix
 * - teaser_media_prefix
 *
 */
#}

{% set classes = [
    'm-teaser',
] %}

<article {{ teaser_attributes.addClass(classes).merge(attributes) }}>
    <div class="m-teaser__media">
        {% if teaser_url %}
            <a href="{{ teaser_url }}" class="m-teaser__link" tabindex="-1" aria-hidden="true">
        {% endif %}

        {% block teaser_media_prefix %}{% endblock %}

        {% if teaser_media %}
            {{ teaser_media }}
        {% else %}
            {{ drupal_image('public://images/2024-01/default-thumbnail-image-surf.png', 'teaser_default', responsive=true) }}
        {% endif %}

        {% if teaser_url %}
            </a>
        {% endif %}
    </div>

    <div class="m-teaser__content">
        {% block teaser_content_prefix %}{% endblock %}

        {% block teaser_content %}
        <{{ teaser_title_tag|default('h3') }} class="m-teaser__title">
        {% if teaser_url %}
        <a href="{{ teaser_url }}" class="m-teaser__link">
            {% endif %}

            {{ teaser_title }}

            {% if teaser_url %}
        </a>
        {% endif %}
    </{{ teaser_title_tag|default('h3') }}>

    {% if teaser_content %}
        <p class="m-teaser__content-text">
            {{- teaser_content -}}
        </p>
    {% endif %}
    {% endblock %}

    {% block teaser_content_suffix %}{% endblock %}
    </div>
</article>
