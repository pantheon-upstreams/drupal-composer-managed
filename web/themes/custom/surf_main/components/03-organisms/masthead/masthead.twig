{#
/**
 * @file
 * Component for Masthead
 *
 * Available props:
 * - attributes: [Drupal\Core\Template\Attribute] Drupal reserved space for attributes.
 * - masthead_attributes: [string] Any additional attributes needing to be specified.
 * - masthead_alerts: [array] Rendered array of objects representing alerts.
 * - masthead_utility: [array] Rendered array of objects representing utility navigation.
 * - masthead_primary: [array] Rendered array of objects representing primary navigation.
 */
#}

{% set classes = [
    'o-masthead',
] %}

<header {{ masthead_attributes.addClass(classes).merge(attributes) }} id="masthead">
    {% if masthead_alerts %}
        <div class="o-masthead__alerts">
            {{ masthead_alerts }}
        </div>
    {% endif %}

    {% if masthead_utility %}
        <div class="o-masthead__utility">
            <div class="container container--default">
                {{ masthead_utility }}
            </div>
        </div>
    {% endif %}

    {% if masthead_primary %}
        <div class="o-masthead__primary">
            <div class="container container--default">
                {{ masthead_primary }}

                <div class="o-masthead__flyout dropdown">
                    <button class="o-masthead__flyout-trigger dropdown__trigger" aria-haspopup="true" aria-expanded="false">
                        {{- 'Menu'|t -}}
                    </button>

                    <div class="o-masthead__flyout-content-wrapper dropdown__content-wrapper">
                        <div class="o-masthead__flyout-content dropdown__content"></div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</header>
