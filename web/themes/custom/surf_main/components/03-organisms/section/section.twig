{#
/**
 * @file
 * Component for Section
 *
 * Available props:
 * - section_attributes: [array] Any parent tag attributes.
 * - section_style: [array].
 * - section_width: [array].
 * - section_content: [array].
 *
 */
#}

{% set classes = [
    'l-section',
    section_style ? 'l-section--' ~ section_style,
    section_alignment ? 'l-section--align-' ~ section_alignment : 'l-section--align-top',
] %}

<section {{ section_attributes.addClass(classes).merge(attributes) }} {{ section_style == 'blue-gradient' ? section_attributes.setAttribute('id', 'particles-js') }}>
    {% if section_width == 'xlarge' %}
        <div class="container container--xlarge">
    {% elseif section_width == 'large' %}
        <div class="container container--large">
    {% elseif section_width == 'medium' %}
        <div class="container container--medium">
    {% elseif section_width == 'small' %}
        <div class="container container--small">
    {% endif %}
        {{ section_content }}
    </div>
</section>

